{
  "compilerOptions": {
    "noEmit": false,
    "moduleResolution": "Node",
    "baseUrl": "./lib",
    "paths": {
      "*": ["node_modules", "lib"]
    },
    "outDir": "dist/server-unpacked",
    "declarationDir": "./dist/types",
    // "emitDeclarationOnly": true,
    "noImplicitAny": false,
    "noImplicitThis": false,
    "module": "commonjs",
    "target": "es5",
    "declaration": true,
    "removeComments": false,
    "sourceMap": true,
    "lib": ["ES5", "DOM", "es2015"],
    "plugins": [
      {
        "name": "typescript-tslint-plugin"
      }
    ]
  },
  "include": ["./lib/**/*"],
  "exclude": ["node_modules", "**/*.(spec|test).ts", "*.js"],
  "baseUrl": "types",
  "typeRoots": ["types", "./node_modules/@types"]
}
